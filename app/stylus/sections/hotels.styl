// Hotels

.hotels
  padding: 0
  background: white
  text-align: left

  #hotel-title
    color: orange

  .hotel
    float: none
    display: inline-block
    margin: 0.5% 0.5%

    .hotel-panel
      position: relative

      .hotel-image
        width: 100%
        height: auto
        margin-bottom: 1%

      .hotel-price
        padding: 1% 2%
        text-align: center
        position: absolute
        background-color: $teal
        font-weight: bold
        color: white
        top: 40%

    .hotel-info
      background-color: $teal
      color: white

// Single Column

  @media screen and (max-width: $small-width)
    .hotel
      width: 100%

// Three columns
  @media screen and (min-width: $small-width + 1px)
    #hotel-title
    .hotel
      width: 32.33%