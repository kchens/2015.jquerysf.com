// Hotels

.hotels
  padding: 0
  text-align: left

  #hotel-title
    color: orange

  .hotel
    float: none
    display: inline-block
    &:nth-child(3n+1)
      background: $teal
    &:nth-child(3n+2)
      background: $teal-drk
    &:nth-child(3n)
      background: darken($teal,50%)
    // margin: 0.5% 0.5%

    .hotel-panel
      position: relative
      background: inherit

      .hotel-image
        width: 100%
        height: auto
        // margin-bottom: 1%

      .hotel-price
        padding: 1% 2%
        text-align: center
        position: absolute
        background: inherit
        font-weight: bold
        color: white
        top: 45%
        opacity: 0.8

    .hotel-info
      background: inherit
      color: white
      margin-bottom: 15px

      p, address
        margin-bottom: 0px

      .fa-star
        color: white

      button
        display: none

    // .hotel-info:hover
    //   visibility: hidden

    // .hotel-info:hover button
    //   display: block

// Single Column

  @media screen and (max-width: $small-width)
    .hotel
      width: 100%

// Three columns
  @media screen and (min-width: $small-width + 1px)
    #hotel-title
    .hotel
      // width: 32.33%
      width: 33.33%