mixin hotel(src, price, name, address, stars, reviews, distance)
  .column.hotel
    .hotel-panel
      img.hotel-image(src=src)
      .hotel-price= price
    .hotel-info
      h3= name
      address= address
      p= stars
      p= reviews
      p= distance
      button Book

