mixin hotel(src, price, name, address, mapLink, stars, reviews, distance, phone, phoneFormatted, email)
  .column.hotel-column
    .hotel
      .hotel-panel
        img.hotel-image(src=src)
        .hotel-price= price
        .book.overlay
          h2
            a(href="mailto:" + email).expand
              | Book
          p
            a(href="tel:+1" + phone).expand
              i.fa.fa-phone
              = phoneFormatted
          p
            a(href="mailto:" + email).expand
              i.fa.fa-envelope
              | Email
          a.close-overlay.hidden
            i.fa.fa-times
      .hotel-info
        .left
          h3= name
          .bottom
            address
              a(href=mapLink)
                i.fa.fa-map-marker
                = address
            p= distance
        .right
          //- .top
            //- Logic to display # of stars
          .bottom
            - var starCounter = 0
              while starCounter < stars
                i.fa.fa-star
                - starCounter++
            p= reviews



